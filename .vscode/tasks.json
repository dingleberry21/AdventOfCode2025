{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C file",
            "type": "shell",
            "command": "/usr/bin/gcc", 
            "args": [
                "-std=c23",
                "-g",
                "Wall",
                "Wextra",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}